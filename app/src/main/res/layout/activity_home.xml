<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="naxxhi.com.vss.HomeActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:id="@+id/linearLayoutHomeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_info_circle"
            app:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="15dp" />

        <ImageView
            android:id="@+id/homeImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/sudoku_bann" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeOptions"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/linearLayoutHomeImage"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonCamera"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:background="@drawable/oval_shape"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_camera"
            android:layout_marginRight="15dp" />

        <ImageButton
            android:id="@+id/buttonGallery"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/oval_shape"
            android:src="@drawable/ic_image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeOptions"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/note1"
            android:textColor="@color/colorGreenPrimary"
            android:textSize="18sp"
            android:typeface="normal"
            app:fontFamily="sans-serif" />

    </LinearLayout>





</RelativeLayout>
